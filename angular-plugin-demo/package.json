{
  "name": "angular-plugin-demo",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "build:plugin-core": "ng build plugin-core",
    "start:plugin-one": "ng serve plugin-one --port 5001",
    "build:plugin-one": "ng build plugin-one",
    "start:plugin-two": "ng serve plugin-two --port 5002",
    "build:plugin-two": "ng build plugin-two",
    "build:host": "ng build host-app",
    "start:host": "ng serve host-app",
    "build:plugins": "npm run build:plugin-one && npm run build:plugin-two",
    "build": "npm run build:plugin-core && npm run build:host && npm run build:plugins",
    "start": "npm run build:plugin-core && npm-run-all --parallel start:plugin-one start:plugin-two start:host",
    "run:prod": "http-server dist/host-app",
    "start:prod": "npm run build && npm run:prod"
  },
  "private": true,
  "dependencies": {
    "@angular-architects/module-federation": "15.0.3",
    "@angular/animations": "15.2.10",
    "@angular/common": "15.2.10",
    "@angular/compiler": "15.2.10",
    "@angular/core": "15.2.10",
    "@angular/forms": "15.2.10",
    "@angular/platform-browser": "15.2.10",
    "@angular/platform-browser-dynamic": "15.2.10",
    "@angular/router": "15.2.10",
    "rxjs": "7.4.0",
    "tslib": "2.3.0",
    "zone.js": "0.11.4"
  },
  "devDependencies": {
    "npm-run-all": "4.1.5",
    "http-server": "14.1.0",
    "@angular-devkit/architect": "^0.1502.11",
    "@angular-devkit/build-angular": "15.2.11",
    "@angular/cli": "15.2.11",
    "@angular/compiler-cli": "15.2.10",
    "ngx-build-plus": "15.0.0",
    "@types/node": "12.11.1",
    "ng-packagr": "^15.2.2",
    "typescript": "4.8.4"
  }
}